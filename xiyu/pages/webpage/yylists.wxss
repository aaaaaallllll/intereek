.yy-header {
  text-align: center;
  margin-bottom: 20rpx;
}

.yy-header .yy-tag {
  display: inline-block;
  width: 300rpx;
  height: 56rpx;
  border: 1px solid #2971f9;
  border-radius: 56rpx;
  font-size: 0;
  overflow: hidden;
}

.yy-header .yy-tag text {
  display: inline-block;
  width: 50%;
  font-size: 26rpx;
  line-height: 56rpx;
  color: #2971f9;
}

.yy-header .yy-tag text.active {
  color: #fff;
  background-color: #2971f9;
}

.yy-table {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.tbody, .thead {
  position: relative;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.tbody view {
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
}

.thead view {
  height: 100rpx;
  line-height: 100rpx;
}

.tbody view:nth-child(1) {
  width: 60rpx;
}

.tbody view:nth-child(2) {
  width: 210rpx;
}

.tbody view:nth-child(3) {
  width: 140rpx;
}

.tbody view:nth-child(4) {
  width: 180rpx;
}

.thead view:nth-child(1) {
  width: 60rpx;
}

.thead view:nth-child(2) {
  width: 210rpx;
}

.tbody view:nth-child(3) {
  width: 140rpx;
}

.thead view:nth-child(4) {
  width: 180rpx;
}

.filter-item {
  color: #2971f9;
}

.tbody::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}

