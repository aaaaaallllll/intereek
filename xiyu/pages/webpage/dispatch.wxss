}

.weui-cell2 {
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.lunzhonglist {
  width: 100%;
}

.steppers {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
  padding: 0;
}

.steppers text.title {
  color: #9c9c9c;
}

.add {
  border: 1rpx solid #6ae9d1;
  color: #6ae9d1;
  font-size: 22rpx;
  width: 130rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 56rpx;
  text-align: center;
  box-sizing: border-box;
}

.del {
  background: #2971f9;
  font-size: 22rpx;
  width: 130rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  color: #fff;
  border-radius: 56rpx;
}

