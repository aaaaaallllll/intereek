.weui-text {
  margin-bottom: 10rpx;
}

.weui-tags {
  overflow: hidden;
  margin: 0 -10rpx;
}

.weui-tab-li {
  width: 33.33%;
  padding: 10rpx;
  float: left;
  box-sizing: border-box;
}

.tag-text {
  display: block;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #f2f2f2;
  color: #666;
  font-size: 26rpx;
  text-align: center;
  border-radius: 4px;
}

.weui-tab-li.active .tag-text {
  background-color: #2971f9;
  color: #fff;
}

/*主容器*/

.stepper {
  width: 130rpx;
  /* height: 45rpx; */
  margin: 0 auto;
  /* border: 1rpx solid #ccc; */
  border-radius: 3rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.van-stepper__minus, .van-stepper__plus {
  width: 20px;
}

/*加号和减号*/

.stepper text {
  float: left;
  width: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

