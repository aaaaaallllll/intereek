/* pages/yuYue/yuYue.wxss */
@import"../../wxss/iconfont.wxss";
page{
  margin: 0;
  padding: 0;
}
.title-btn{
width: 680rpx;
background-color: #BBB;
height: 80rpx;
margin: 60rpx auto;
line-height: 80rpx;
display: flex;
border-radius: 40rpx;
}
.title-btn text{
width: 170rpx;
background-color: #FFF;
height: 60rpx;
text-align: center;
line-height: 60rpx;
border: 3rpx solid #1B9CFC;
font-size: 28rpx;
color: #666;
}
.title-btn text:first-child{
border-top-left-radius: 30rpx;
border-bottom-left-radius: 30rpx;
/* background-color: #1B9CFC; */
}
.title-btn text:last-child{
border-top-right-radius: 30rpx;
border-bottom-right-radius: 30rpx;
/* background-color: #1B9CFC; */
}
.title-btn .active{
  background-color: #1B9CFC;
  color: #FFF
}

.box{
  width: 100%;
  height: 80rpx;
  display: flex;
  font-size: 28rpx;
  color: #666;
  background-color: #FFF;
  box-shadow: 0 0 2rpx rgb(185, 185, 185);
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  margin-bottom: 34rpx;
}
.box input{
  height: 60rpx;
  width: 80%;
  line-height: 60rpx;
  color: rgb(126, 126, 126)
}
.box text{
  display: inline-block;
  height: 60rpx;
  width: 180rpx;
  text-align: left;
  line-height: 60rpx;
  padding-left: 20rpx;
}
.box view{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  /* text-align: center; */
  padding-left:40rpx; 
}
.box>span{
  float: right;
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
}
/* 项目 */
.pages{
  width: 100%;
  font-size: 18rpx;
  color: #888;
  padding: 10rpx 20rpx;
  margin-top: -20rpx;
  margin-bottom: 20rpx;
}
.pages view{
  width: 220rpx;
  height: 50rpx;
  background-color: #FFF;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #1B9CFC;
  display: inline-block;
  margin-right:16rpx; 
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  color: #888; 
}
.pages view text:last-child{
  color: rgb(245, 83, 83)
}

/* 统一按钮 */
.btn{
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 70rpx;
  background: #1B9CFC;
  color: #FFF;
  float: right;
  position: relative;
  right: 30rpx;
}
/* 房间 */
.pages view .lx{
  font-size: 25rpx;
 
}
.fj .pages .on{
  background-color: #1B9CFC;
  color: #FFF;
}
/* 订单 */
.dingdan{
  width: 130rpx;
  height: 130rpx;
  border-radius: 80rpx;
  position: fixed;
  bottom: 80rpx;
  left: 80rpx;
  background-color: #f1c40f;
  color: #FFF;
  text-align: center;
  box-shadow: 3rpx 3rpx 10rpx #BBB;
  line-height: 50rpx;
  padding-top: 15rpx;
  box-sizing: border-box;
}
.dingdan text{
  display: block;
  font-size: 30rpx;
}
.dingdan text:first-child{
  font-size: 40rpx;
}