<view class='menu-toggle' bindtap='clickMenu'>
  <image src='../images/plus.png'></image>
</view>
<view class='nav-inner' wx:if="{{flag}}">
  <view class='popnav-list'>
    <view class='col-6' bindtap='paiqian'>
      <view class='nav-item'>
        <image src='../images/menu1.png'></image>
        <view>派遣</view>
      </view>
    </view>
    <view class='col-6' bindtap='shangzhong'>
      <view class='nav-item'>
        <image src='../images/menu2.png'></image>
