    <view class='col-6' bindtap='xiazhong'>
      <view class='nav-item'>
        <image src='../images/menu4.png'></image>
        <view>下钟</view>
      </view>
    </view>
    <view class='col-6' bindtap='fuwu'>
      <view class='nav-item'>
        <image src='../images/menu5.png'></image>
        <view>服务</view>
      </view>
    </view>
    <view class='col-6' bindtap='ludan'>
      <view class='nav-item'>
        <image src='../images/menu6.png'></image>
        <view>录单</view>
      </view>
    </view>
    <view class='col-12'>
      <view class='nav-close' bindtap='clickClose'>
        <text class='iconfont icon-close'></text>
      </view>
    </view>
  </view>
</view>