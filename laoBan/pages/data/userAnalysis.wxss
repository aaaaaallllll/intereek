.filter-item{
  width: 155rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  border:1px solid #aaaaaa;
  text-align: center;
  color: #999;
  font-size: 30rpx;
}
.filter-item.active{
  background-color: #2971f9;
  color: #fff;
  border:1px solid #2971f9;
}
.weui-filter{
  margin-bottom: 30rpx;
}
.stat-grid{
  position: relative;
  width: 680rpx;
  height: 320rpx;
  border-radius: 20rpx;
  margin-bottom:10rpx;
}
.stat-grid image{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  width: 680rpx;
  height: 320rpx;
}
.stat-cell{
  position: relative;
  z-index: 11;
  color: #fff;
  padding:80rpx 40rpx;
}
.stat-cell .stat-time{
  font-size: 24rpx;
  margin-bottom: 30rpx;
}
.stat-box{
  text-align: center;
}
.stat-box view:first-child{
  font-size: 72rpx;
  margin-bottom: 30rpx;
}
.stat-box view:last-child{
  font-size:26rpx;
}
.stat-tips{
  padding-top: 30rpx;
  padding-bottom: 40rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 1.6
}

.end-tips{
  text-align: center;
  margin-top: 50rpx;
  font-size: 26rpx;
}
.stat-flex{
  margin: 0 -8rpx;
  overflow: hidden
}
.stat-flex .stat-flex-item{
  padding: 8rpx;
  width: 50%;
  float: left;
  text-align: center;
  box-sizing: border-box
}
.data-box{
  position: relative;
  height: 140rpx;
  overflow: hidden;
  border-radius: 16rpx;
}
.data-box .itembg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.data-box view{
  position: relative;
  z-index: 99;
  color: #fff;
  line-height: 1;
}
.data-box view:first-child{
  font-size:44rpx;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}
.data-box view:nth-child(2){
  font-size: 22rpx;
}
.fliter-navbar{
  margin-top: 0;
}
.fliter-link{
  font-size: 30rpx;
}
.fliter-link.active::after{
  width: 48rpx;
  height: 8rpx;
  background-color: #2971f9;
  content: 'ã€€';
  position: absolute;
  left: 50%;
  margin-left: -24rpx;
  bottom: -10rpx;
  border-radius: 20rpx;
  box-shadow: 1px 2px 3px #cddefe
}
.stap-wrap{
  padding: 20rpx 20rpx 30rpx 20rpx;
}
































