/* pages/data/hand.wxss */
.hondList{
   background-color: #fff;
  border-radius: 20rpx;
  /* padding:0 30rpx; */
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin: 30rpx auto;
  width: 94%;
}
.hondList .hondItem{
  position: relative;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.hondList .hondItem text{
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  width: 25%
}
.hondList .hondItem text::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}
.top{
  	position: relative;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    background-color: rgb(214, 214, 214);
    color: #FFF;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}
.top text{
  height: 100rpx;
  line-height: 100rpx;
  width: 25%
}