<view class="form-cell">
  <view class='form-logo'>
    <image src='../../images/logo.png'></image>
  </view>
  <z-input bind:input="updateValue" data-name='companyCode' value='{{companyCode}}' icon="icon-gongsi" placeholder='公司代码'></z-input>
  <z-input bind:input="updateValue" data-name='userId' value='{{userId}}' icon="icon-geren" placeholder='技师号'></z-input>
  <z-input bind:input="updateValue" data-name='pwd' value='{{pwd}}' type="password" icon="icon-mima" placeholder='密码'></z-input>
  <view class='form-button' bindtap='login'>
    <button class='weui-btn weui-btn-login'>登录</button>
  </view>
</view>