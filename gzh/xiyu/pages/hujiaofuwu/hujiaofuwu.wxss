.all {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, rgba(16, 187, 255, 1) 0%, rgba(50, 142, 252, 1) 48%, rgba(58, 101, 231, 1) 100%);
  position:fixed;
  z-index:-1;
}
.all>image{
  width:100%;height:100%;
}
.all_nei {
  width: 100%;
  height: 100vh;
  padding:1.5rem;
}

.input{
  width:80%;
  height:70rpx;
  background:rgba(243, 231, 231, 0.788);
  display: flex;
  border-radius: 1rem;
}
.input_1{
  width:2.5rem;

}
.input_1>image{
  width:100%;height:100%;
}
.input_2{
  float:right;
  width:80%;height:100%;
  border-top-right-radius: 1rem;
  border-bottom-right-radius: 1rem;
  font-size:.8rem;
}
/* 房间信息 */
.fangjian{
  width:90%;
  display: flex;
  flex-wrap: wrap;
  margin:20rpx 0 120rpx;
}
.everyone{
  width:23%;
  height:110rpx;
  border-radius: .3rem;
  margin-right:10rpx;margin-top:20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.everyone>view{
  width:100%;height:100%;
  display: flex;
  border-radius: .3rem;
  justify-content: center;
  align-items: center;
}



.bottom{
  width:100%;
  height:100rpx;
  background:#fff;
  position:fixed;
  bottom:0;
  left:0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.btm_1{
  width:15%;
  height:50rpx;
  border-radius: 1rem;
  font-size:.6rem;
  text-align: center;
  line-height: 50rpx;
  color:#5B5B5B;
}