  /* background-color: #BBB */
}
.left-box{
  width: 180rpx;
  height: 180rpx;
}
.right{
  width: 100%;
  height: 100%;
  padding-left: 180rpx;
  /* background-color: red; */
  box-sizing: border-box;
}
.right .right-box{
  width: 100%;
  height: 180rpx;
  /* background: blue; */
}


/*左侧栏list的item*/
.nav_left_items {
  /*每个高30px*/
  height: 110rpx;
  /*垂直居中*/
  line-height: 110rpx;
  /*再设上下padding增加高度，总高42px*/
  padding: 6px 0;
  /*只设下边线*/
  color: #333;
  border-bottom: 1rpx solid #eee;
  /*文字14px*/
  font-size: 14px;
}

/*左侧栏list的item被选中时*/

.nav_left_items.active {
  /*背景色变成白色*/
  background: #2971f9;
  color: #fff;
}

/*右侧栏主盒子*/

.nav_right {
  /*右侧盒子使用了绝对定位*/
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  /*宽度75%，高度占满，并使用百分比布局*/
  width: 75%;
  min-height: 1000px;
  padding: 10px;
  box-sizing: border-box;
  background: #f5f5fa;
}

/*右侧栏list的item*/

.nav_right .nav_right_items {
  /*浮动向左*/
  float: left;
  /*每个item设置宽度是33.33%*/
  width: 500rpx;
  height: 210rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(221, 221, 221, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav_right .nav_right_items image.shangpin {
  /*被图片设置宽高*/
  width: 200rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.nav_right .nav_right_items text {
  /*给text设成块级元素*/
  display: block;
  margin-top: 15px;
  font-size: 14px;
  color: black;
  /*设置文字溢出部分为...*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.nav_right_items_right {
  width: 260rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.nav_right_items_right_title {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
